generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Empresas {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  tipo      String
  descricao String
  historia  String?
  vagas     Vagas[]
}

model Vagas {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  nome       String
  tipo       String
  requisitos String
  descricao  String
  qtd_vagas  Int
  salario    Float
  empresa_id String   @db.ObjectId
  empresas   Empresas @relation(fields: [empresa_id], references: [id])
}

model Aluno {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  nome         String
  cpf          String
  senha        String
  telefone     String
  cep          String
  rua          String
  bairro       String
  numero       String
  complemento  String?
  uf           String
  curso_id     String?
  plano_id     String    @db.ObjectId
  planos       Planos    @relation(fields: [plano_id], references: [id])
}

model Planos {
  id    String    @id @default(auto()) @map("_id") @db.ObjectId
  nome  String
  tipo  String
  preco Float
  curos Cursos[]
  aluno Aluno[]
}

model Cursos {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  plano_id     String      @db.ObjectId
  planos       Planos      @relation(fields: [plano_id], references: [id])
  duracao      String?
  descricao    String
  nome         String
  professor_id String      @db.ObjectId
  professor    Professores @relation(fields: [professor_id], references: [id])
}

model Professores {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  nome         String
  cpf          String
  telefone     String
  cep          String
  rua          String
  bairro       String
  numero       String
  complemento  String?
  uf           String
  curso        Cursos[]
}
